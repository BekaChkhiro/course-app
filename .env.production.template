# =============================================================================
# Production Environment Variables Template
# =============================================================================
# Copy this file to .env.production and fill in the values
# NEVER commit the actual .env.production file to version control
# =============================================================================

# Application
NODE_ENV=production
API_VERSION=v1

# Database (PostgreSQL)
# Use a managed database service like Railway, Supabase, AWS RDS, etc.
DATABASE_URL=postgresql://user:password@host:5432/database?schema=public
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=course_platform

# Redis Cache
# Use a managed Redis service like Railway, Redis Cloud, AWS ElastiCache
REDIS_URL=redis://default:password@host:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# JWT Secrets (Generate with: openssl rand -hex 64)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# API URL (for frontend)
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# Stripe Payment Integration
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Cloudflare R2 Storage (or AWS S3)
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=your-bucket-name
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://your-cdn-domain.com

# Email Service (Resend)
RESEND_API_KEY=re_your-resend-api-key
EMAIL_FROM=noreply@yourdomain.com
EMAIL_REPLY_TO=support@yourdomain.com

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project

# Monitoring & Analytics
POSTHOG_API_KEY=your-posthog-key
POSTHOG_HOST=https://app.posthog.com

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400000

# File Upload Limits (in bytes)
MAX_FILE_SIZE=524288000
MAX_IMAGE_SIZE=10485760
MAX_VIDEO_SIZE=524288000

# CDN Configuration
CDN_URL=https://cdn.yourdomain.com

# Feature Flags
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_SOCIAL_LOGIN=false
MAINTENANCE_MODE=false

# Support Contact
SUPPORT_EMAIL=support@yourdomain.com
SUPPORT_PHONE=+1-555-000-0000

# Webhook URLs (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_RETENTION_WEEKS=4
BACKUP_RETENTION_MONTHS=12
BACKUP_S3_BUCKET=your-backup-bucket

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem
